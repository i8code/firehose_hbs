<div class="span6 offset3 text-center boxycenter" style="margin-top: 50px;">
	<h1 class="h1-custom">
		More NYC...
	</h1>
	<br/>
	<!-- form found on https://github.com/plataformatec/simple_form -->
	<%= simple_form_for @pic do |f|%>
		<%= f.input :place, :label => 'Where should we go?', :placeholder => 'Hayden Planetarium Star Show' %>
		<%= f.input :description, :label => 'Tell me something about it' , :placeholder => 'Stargaze from Manhattan, anytime.'  %>
		<%= f.input :location, :label => 'Address'  , :placeholder => '81 Central Park West, New York, NY 10023' %>
		<br/>
		<br/>
		<%= f.input :image, :label => '...Upload!' %>
	<br/>
	<%=submit_tag 'Save', :class => 'btn btn-info btn-large' %>
	<%end%>
</div>





