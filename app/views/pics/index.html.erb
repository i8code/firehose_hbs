
<h1 class="h1-custom" style="margin-top: 0px; margin-bottom: 5px; line-height: ">
	New York! 
</h1>
<br/>
<h1 class="h1-custom" style="margin-top: 0px; font-size: 50px; padding: 0px; margin-bottom: 70px;">
	Select a location to find adventures nearby 
</h1>
<div> 
	<!--go through all items in database-->
	<% @pics.each do |pic| %>
	<div class="span4 boxy text-center">
		<h2>
			<%= pic.place %>
		</h2>
		<!-- display the image-->
		<%= image_tag pic.image %>
		<br/>
		<br/>
		<!-- display the image description-->
		<%= pic.description %>
		<br/>
		<br/>
		<!--<%= pic.location %>-->
		<%= link_to pic.location, pic%>
		<br/>
	</div> <!-- boxy -->
	<% end %> 
</div>



